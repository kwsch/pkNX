namespace pkNX.Structures;

enum MoveInflictDuration : ubyte {
    None,
    Permanent,
    TurnCountSwitch,
    PermanentSwitch,
    TurnCountNoSwitch,
}

enum Heal : ubyte {
    None = 0,
    Quarter = 253,
    Half = 254,
    Full = 255,
}

enum MoveTarget : ubyte {
    // Specific target
    AnyExceptSelf,
    AllyOrSelf,
    Ally,
    Opponent,
    AllAdjacent,
    AllAdjacentOpponents,
    AllAllies,
    Self,
    All,
    RandomOpponent,

    // No pkm target
    SideAll,
    SideOpponent,
    SideSelf,
    Counter,
}

